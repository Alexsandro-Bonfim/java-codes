import java.util.Scanner;

public class Valores {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Digite o primeiro número: ");
        int num1 = sc.nextInt();

        System.out.println("Digite o segundo número: ");
        int num2 = sc.nextInt();

        int soma = num1 + num2;

        while (soma <= 15) {
            System.out.println("A soma dos números é menor ou igual a 15. Digite novos números.");
            System.out.println("Digite o primeiro número: ");
            num1 = sc.nextInt();

            System.out.println("Digite o segundo número: ");
            num2 = sc.nextInt();

            soma = num1 + num2;
        }

        System.out.println("A soma dos números é maior que 15.");

        sc.close();
    }
}
